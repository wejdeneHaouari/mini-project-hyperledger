<body>
  <!-- Sidenav -->
  <% include ../partials/sidebar %>
  <!-- Main content -->
  <div class="main-content">
    <!-- Top navbar -->
    <% include ../partials/navbar %>
    <!-- Header -->
    <% include ../partials/vaccine/header %>
    <!-- Page content -->
    <div class="container-fluid mt--7">
      <div class="row">
        <%if  (locals.messages && messages.vaccine) { %>
          <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
            <div class="card card-profile shadow">
              <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
                <p>Details</p>
              </div>
             
              <div class="card-body pt-0 pt-md-4">
                <div class="row">
                  
                </div>
                <div class="text-center">
                  <h4>Vaccine Details</h4>
                 
                    <div class="h5 mt-4">
                      <i class="ni business_briefcase-24 mr-2"></i>Vaccine Name
                    </div>
                    <div>
                      <i class="ni education_hat mr-2"></i>      <%= messages.vaccine.name %>
                    </div>
                  
                    <div class="h5 mt-4">
                      <i class="ni business_briefcase-24 mr-2"></i>Vaccine Status
                    </div>

                        <%if (messages.vaccine.currentState == 1) { %>
                          <i class="bg-yellow"></i>  PENDING
                          <% } %>
                          <%if (messages.vaccine.currentState ==2 ) { %>
                            <i class="bg-success"></i>  APPROVED
                          <% } %>
                          <%if (messages.vaccine.currentState ==3 ) { %>
                            <i class="bg-red"></i>  DECLINED
                           <% } %>
                     
                  
                 
                  <div class="h5 mt-4">
                    <i class="ni business_briefcase-24 mr-2"></i>Issue Date
                  </div>
                  <div>
                    <i class="ni education_hat mr-2"></i>    <%=   messages.vaccine.issueDateTime%>
                  </div>
                  <div class="h5 mt-4">
                    <i class="ni business_briefcase-24 mr-2"></i>composition
                  </div>
                  <div>
                    <i class="ni education_hat mr-2"></i>   <%=   messages.vaccine.composition%> 
                  </div>
                  <hr class="my-4" />
                  <h4>Lot Details</h4>
                  <div class="text-center">
                
                 
                    <div class="h5 mt-4">
                      <i class="ni business_briefcase-24 mr-2"></i>fabrication Date
                    </div>
                    <div>
                      <i class="ni education_hat mr-2"></i>    <%=   messages.lot[0].Value.fabricationDate%>
                    </div>
                    <div class="h5 mt-4">
                      <i class="ni business_briefcase-24 mr-2"></i>expiration Date
                    </div>
                    <div>
                      <i class="ni education_hat mr-2"></i>    <%=   messages.lot[0].Value.expirationDate%>
                    </div>
                    
                    
                  </div>
                </div>
              </div>
            </div>
          </div>
         <% } %>

  
        



        <div class="col-xl-8 order-xl-1">
          <div class="card bg-secondary shadow">
            <div class="card-header bg-white border-0">
              <div class="row align-items-center">
                <div class="col-8">
                  <h3 class="mb-0">Verify lot</h3>
                </div>
                <div class="col-4 text-right">
                  
                </div>
              </div>
            </div>
            <div class="card-body">

              <form action="/verify-lot-info" method="POST">
                <h6 class="heading-small text-muted mb-4">Lot information</h6>
                <div class="pl-lg-4">
                  <% if (locals.messages && messages.success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                      <%= messages.success %>
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                      </button>
                    </div>
                  <% } %>
                  <% if (locals.messages && messages.errors && messages.errors.databaseError) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                      <%= messages.errors %>
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                      </button>
                    </div>
                  <% } %>
                
                  <div class="row">
                    <div class="col-lg-12">
                      <div class="form-group">
                        <label class="form-control-label" for="input-numero">numero</label>
                        <input type="text" id="input-numero" class="form-control form-control-alternative" name="numero" placeholder="numero" >
                        <% if (locals.messages && messages.errors && messages.errors.numero) { %>
                          <strong class="invalid-feedback" style="display: block"><%= messages.errors.numero%></strong>
                        <% } %>
                      </div>
                    </div>
                   
                   

                   


                    <div class="col-lg-12 text-center">
                      <button class="btn btn-success mt-4 mb-4">Verify</button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- Footer -->
      <% include ../partials/footer %>
    </div>
  </div>

  <!-- Include scripts -->
  <% include ../partials/scripts %>
</body>
